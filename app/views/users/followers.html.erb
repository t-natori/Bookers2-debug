<h2>Followers Users</h2>
<% if @users.exists? %>
    <table class="table">
        <thead>
            <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="2"></th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
            <tr>
                <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
                <td><%= user.name %></td>
                <td>
                    フォロー数:<%= user.followings.count %>
                </td>
                <td>
                    フォロワー数:<%= user.followers.count %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
<% else %>
    <%= "ユーザーはいません" %>
<% end %>