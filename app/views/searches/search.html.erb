<% if @range == "User" %>
    <h2>Users search for "<%= @word %>"</h2>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Introduction</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
            <tr>
                <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
                <td><%= user.name %></td>
                <td><%= user.introduction %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
<% else %>
    <h2>Book search for "<%= @word %>"</h2>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
            </tr>
        </thead>
        <tbody>
            <% @books.each do |book| %>
            <tr>
                <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
<%end %>